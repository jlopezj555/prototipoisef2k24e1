@model Portal_Web.Models.Asignacion_Vacaciones

@{
    ViewBag.Title = "Solicitar Vacaciones";
}

<head>
    <meta charset="utf-8" />
    <title>Solicitar Vacaciones</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@200;500;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" />
    <link rel="stylesheet" href="~/Content/styles/normalize.css" />
    <link rel="stylesheet" href="~/Content/styles/vacaciones.css"/>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2>Solicitar Vacaciones</h2>
        </div>
        @using (Html.BeginForm("Vacaciones", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "field-validation-error text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.asignacion_vacaciones_descripcion)
                @Html.TextBoxFor(model => model.asignacion_vacaciones_descripcion, new { @class = "form-control", maxlength = 25 })
                @Html.ValidationMessageFor(model => model.asignacion_vacaciones_descripcion, "", new { @class = "field-validation-error text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.asignacion_vacaciones_fecha_inicio)
                @Html.TextBoxFor(model => model.asignacion_vacaciones_fecha_inicio, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.asignacion_vacaciones_fecha_inicio, "", new { @class = "field-validation-error text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.asignacion_vacaciones_fecha_fin)
                @Html.TextBoxFor(model => model.asignacion_vacaciones_fecha_fin, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.asignacion_vacaciones_fecha_fin, "", new { @class = "field-validation-error text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Empleado")
                @Html.DropDownList("fk_clave_empleado", ViewBag.Empleados as SelectList, "-- Seleccione un empleado --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Empleado, "", new { @class = "field-validation-error text-danger" })
            </div>

            <div class="footer">
                <input type="submit" value="Guardar Solicitud" class="btn" />
            </div>
        }
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>