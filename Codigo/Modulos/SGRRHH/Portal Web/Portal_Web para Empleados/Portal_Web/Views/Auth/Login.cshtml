@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@200;500;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
          integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/Content/normalize.css" />
    <link rel="stylesheet" href="~/Content/Login.css" />
    <title>Login</title>
</head>
<body>
    <div class="login-design">
        <div class="waves">
            <img src="~/img/loginPerson.png" alt="" />
        </div>
        <div class="login">
            <div class="login-data">
                <img src="~/img/collab.png" alt="" />
                <h1>Inicio de Sesión</h1>

                @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                {
                    if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <div class="input-group">
                        <div class="input-fill">
                            <i class="fas fa-envelope"></i>
                            @Html.TextBox("email", null, new { placeholder = " ", required = "required" })
                            <span class="input-label">Correo Electrónico</span>
                        </div>
                        @Html.ValidationMessage("email", "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group">
                        <div class="input-fill">
                            <i class="fas fa-lock"></i>
                            @Html.Password("password", null, new { placeholder = " ", required = "required" })
                            <span class="input-label">Contraseña</span>
                        </div>
                        @Html.ValidationMessage("password", "", new { @class = "text-danger" })
                    </div>

                    <a href="@Url.Action("Register", "Auth")">¿Necesitas una Cuenta?</a>
                    <input type="submit" value="Iniciar Sesión" class="btn-login" />
                }
            </div>
        </div>
    </div>
</body>
</html>
